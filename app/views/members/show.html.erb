<h1>Member Page</h1>

<p>Hello, <%= current_user.name %></p>

<hr>
<h3>Your Favorites List</h3>
<h4>Sort by created_at in ascending order:</h4>
<div id="favorites">
  <table border="1">
    <thead>
      <tr>
        <th>Toy Name</th>
        <th>Store Name</th>
        <th>Toy Maker Name</th>
      </tr>
      <tbody>
        <% @favorites_by_earliest_created.each do |favorite| %>
          <tr>
            <td><%= favorite.toy_name %></td>
            <td><%= favorite.store_name %></td>
            <td><%= favorite.toy_maker_name %></td>
          </tr>
        <% end %>
      </tbody>
    </thead>
  </table>
</div>
<h4>Sort by Store Maker Name (excluding "未設定"):</h4>
<div id="favorites">
  <table border="1">
    <thead>
      <tr>
        <th>Toy Name</th>
        <th>Store Name</th>
        <th>Store Maker Name</th>
      </tr>
      <tbody>
        <% @favorites_by_store_maker_name_unset.each do |favorite| %>
          <tr>
            <td><%= favorite.toy_name %></td>
            <td><%= favorite.store_name %></td>
            <td><%= favorite.store_maker_name %></td>
          </tr>
        <% end %>
      </tbody>
    </thead>
  </table>
</div>